<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yalantis.contextmenu" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yalantis.contextmenu.sample.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.Bluetooth.DispayActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            android:label="@string/context_menu"/>

        <activity android:name=".sample.RoasterActivity"> </activity>
        <activity android:name=".sample.RoastingNewModeActivity">
        </activity>
        <activity android:name=".sample.RoastingNewActivity"
            android:noHistory="true">
        </activity>
        <activity android:name=".sample.RoastingResultActivity"> </activity>
        <activity android:name=".sample.NoteActivity"> </activity>

        <activity android:name="com.cardview.LongClickactivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            android:label="메뉴선택"
        />
        <activity android:name=".sample.RoastingNewControlActivity"></activity>
        <activity android:name=".sample.EmailActivity"
            android:noHistory="true">
        </activity>

    </application>
</manifest>
